{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./",
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "./",
        "ast-library"
    ],
    "exclude": [
        "node_modules",
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
        "./dist/**/*"
    ]
}
